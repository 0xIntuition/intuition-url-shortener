{
  "name": "intuition-url-shortener",
  "version": "1.0.0",
  "description": "URL shortening service for Intuition protocol with social media meta tags",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "npm run css:watch & tsx watch src/server.ts",
    "build": "npm run css:build && tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "css:watch": "npx tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css --watch",
    "css:build": "npx tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css --minify"
  },
  "keywords": [
    "hono",
    "url-shortener",
    "intuition",
    "graphql"
  ],
  "author": "0xIntuition",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.13.0",
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.2",
    "hono": "^4.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
